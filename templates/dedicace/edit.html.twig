{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} Edit Dédicace
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>
            Edit dédicace
            {{ include('dedicace/_delete_form.html.twig') }}
        </h1>

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.pseudo, {
                'label': 'Votre Pseudo',
                'attr': {'class': 'form-control'}
            }) }}
        </div>
        <div class="form-group">
            {{ form_row(form.message, {
                'label': 'Votre Message',
                'attr': {'class': 'form-control'}
            }) }}
        </div>
        <div style="display: inline-block;">
            <button class="btn btn-success">
                <span class="far fa-save"></span>
                Enregister
            </button>
            <a class="btn btn-primary" href="{{ path('dedicace_index') }}">
                <span class="fa fa-arrow-left"></span>
                Retour à la liste
            </a>
        </div>

        {{ form_rest(form) }}
        {{ form_end(form) }}

    </div>
{% endblock %}
